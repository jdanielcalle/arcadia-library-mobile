<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#BDECB6">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:src="@drawable/logo_arcadia_library"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="MENÚ INICIAL"
        android:textColor="#008F39"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btlogin"
            android:layout_gravity="center_horizontal"
            android:text="Login"
            android:backgroundTint="#80FF00"
            android:textColor="#008F39"
            android:layout_marginEnd="150dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btregistro"
            android:layout_gravity="center_horizontal"
            android:text="Registro"
            android:textColor="#008F39"
                android:backgroundTint="#80FF00"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="GESTIÓN DE LIBROS"
        android:textColor="#008F39"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnregistrar"
            android:layout_weight="1"
            android:text="Registro"
            android:backgroundTint="#008F39"
            android:layout_marginEnd="10dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnbuscar"
            android:layout_weight="1"
            android:text="Buscar"
            android:backgroundTint="#008F39"
            android:layout_marginEnd="10dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnlistar"
            android:layout_weight="1"
            android:text="Listar"
            android:backgroundTint="#008F39"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="GESTIÓN DE USUARIOS"
        android:textColor="#008F39"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGestionarUser"
            android:layout_gravity="center_horizontal"
            android:text="GESTIONAR"
            android:backgroundTint="#008F39"
            android:layout_marginEnd="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnlistarUsuarios"
            android:layout_gravity="center"
            android:text="LISTAR"
            android:backgroundTint="#008F39"/>
    </LinearLayout>

</LinearLayout>